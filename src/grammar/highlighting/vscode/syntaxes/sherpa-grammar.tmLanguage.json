{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Sherpa Grammar",
	"scopeName": "source.sherpa",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#importPreamble"
		},
		{
			"include": "#preamble"
		},
		{
			"include": "#production"
		}
	],
	"repository": {
		"importPreamble": {
			"match": "(\\IMPORT)\\s+([\\w\\-_\\/\\.\\@]+)\\s+(AS|as)\\s+(\\w+)",
			"captures": {
				"1": {
					"name": "storage.type"
				},
				"2": {
					"name": "string"
				},
				"3": {
					"name": "storage.type"
				},
				"4": {
					"name": "variable.other"
				}
			}
		},
		"preamble": {
			"begin": "(\\@\\w+)",
			"end": "$\\n?",
			"name": "keyword.other",
			"patterns": [
				{
					"include": "#symbols"
				}
			]
		},
		"functionReference": {
			"name": "storage.type",
			"match": "(f\\:)\\s*\\w*\\s*\\^\\w+\\s*"
		},
		"function": {
			"begin": "(f\\:)\\s*\\w*\\s*{",
			"end": "}",
			"captures": {
				"0": {
					"name": "storage.type"
				}
			},
			"patterns": [
				{
					"include": "source.js"
				}
			]
		},
		"symbols": {
			"name": "keyword.operator",
			"patterns": [
				{
					"include": "#terminal-escaped-symbol"
				},
				{
					"include": "#terminal-symbol"
				},
				{
					"include": "#terminal-keyword"
				},
				{
					"include": "#terminal-generated"
				}
			]
		},
		"terminal-keyword": {
			"match": "((t\\:)[a-zA-Z\\_\\-]*|\\θ[a-zA-Z\\_\\-]*|ɛ)|(\\$eof)",
			"name": "keyword.operator"
		},
		"terminal-generated": {
			"match": "((g\\:)[a-zA-Z\\_\\-]*|\\θ[a-zA-Z\\_\\-]*|ɛ)|(\\$eof)",
			"name": "keyword.operator"
		},
		"terminal-symbol": {
			"match": "[^\\θ\\\\\\w\\↦\\|\\[\\]\\#\\?\\→\\s][^\\\\\\(\\↦\\|\\)\\(\\[\\]\\#\\?\\→\\s]*",
			"name": "variable.other"
		},
		"terminal-escaped-symbol": {
			"match": "\\\\[^\\s]+",
			"name": "variable.other"
		},
		"nonterm": {
			"name": "variable.other",
			"match": "\\w+"
		},
		"importTerm": {
			"match": "(\\w+::)(\\w+)",
			"captures": {
				"1": {
					"name": "meta.function-call"
				},
				"2": {
					"name": "variable.other"
				}
			}
		},
		"meta": {
			"patterns": [
				{
					"include": "#symbol-modifiers"
				},
				{
					"include": "#symbol-actions"
				}
			]
		},
		"symbol-actions": {
			"name": "keyword.operator",
			"begin": "(\\()\\s*(ERR|IGN|EXC|RED|RES)",
			"end": "\\)",
			"patterns": [
				{
					"include": "#symbols"
				}
			]
		},
		"symbol-modifiers": {
			"name": "keyword.operator",
			"match": "\\([\\+\\*]([^\\)]*)\\)|\\?",
			"captures": {
				"1": {
					"name": "variable.other"
				}
			}
		},
		"groupedBody": {
			"name": "meta.function",
			"begin": "\\(",
			"end": "\\)",
			"patterns": [
				{
					"include": "#productionBodyContents"
				},
				{
					"include": "#inlineProductionBody"
				}
			]
		},
		"production": {
			"begin": "(<>)?\\s*(\\w+)\\s*(?=>)",
			"end": "^\\s*(?=<>)",
			"beginCaptures": {
				"0": {
					"name": "meta.definition.function"
				}
			},
			"patterns": [
				{
					"include": "#productionBody"
				}
			]
		},
		"productionBody": {
			"name": "meta.function",
			"begin": "\\||\\>",
			"end": "^\\s*(?=(<>|\\|))",
			"beginCaptures": {
				"0": {
					"name": "meta.definition.function"
				}
			},
			"patterns": [
				{
					"include": "#productionBodyContents"
				}
			]
		},
		"inlineProductionBody": {
			"name": "meta.function",
			"begin": "\\|",
			"end": "\\s*(?=\\)|\\|)",
			"beginCaptures": {
				"0": {
					"name": "meta.definition.function"
				}
			},
			"patterns": [
				{
					"include": "#productionBodyContents"
				},
				{
					"include": "#inlineProductionBody"
				}
			]
		},
		"productionBodyContents": {
			"patterns": [
				{
					"include": "#meta"
				},
				{
					"include": "#groupedBody"
				},
				{
					"include": "#terminal-escaped-symbol"
				},
				{
					"include": "#symbols"
				},
				{
					"include": "#function"
				},
				{
					"include": "#functionReference"
				},
				{
					"include": "#importTerm"
				},
				{
					"include": "#term"
				},
				{
					"include": "#nonterm"
				},
				{
					"include": "#comments"
				}
			]
		},
		"comments": {
			"patterns": [
				{
					"name": "comment.block",
					"match": "^\\s*\\#.*"
				}
			]
		}
	}
}